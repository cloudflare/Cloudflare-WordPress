# This file is for unifying the coding style for different editors and IDEs
# editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[{.jshintrc,*.json,*.yml}]
indent_size = 2

[{*.txt,wp-config-sample.php}]
end_of_line = crlf
